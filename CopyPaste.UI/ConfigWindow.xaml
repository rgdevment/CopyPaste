<Window
    x:Class="CopyPaste.UI.ConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Configuracion - CopyPaste">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid Padding="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <FontIcon Glyph="&#xE713;" FontSize="28"/>
                <TextBlock x:Name="ConfigTitle" Text="Configuracion" FontSize="28" FontWeight="SemiBold"/>
            </StackPanel>
            <TextBlock x:Name="ConfigSubtitle" Text="Los cambios se guardan en MyM.json y requieren reiniciar." FontSize="12" Opacity="0.6" Margin="0,8,0,0"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,16,0">
            <StackPanel Spacing="24">
                <!-- LANGUAGE -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="LanguageHeading" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock x:Name="LanguageLabel" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock x:Name="LanguageDesc" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                            </StackPanel>
                            <ComboBox x:Name="LanguageCombo" Grid.Column="1" MinWidth="150">
                                <ComboBoxItem Tag="auto"/>
                                <ComboBoxItem Content="English" Tag="en-US"/>
                                <ComboBoxItem Content="Español (Chile)" Tag="es-CL"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                </StackPanel>
                <!-- STARTUP -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE7E8;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="StartupHeading" Text="INICIO" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock x:Name="StartupLabel" Text="Iniciar con Windows" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock x:Name="StartupDesc" Text="Ejecuta en segundo plano al iniciar sesion" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                            </StackPanel>
                            <ToggleSwitch x:Name="RunOnStartupSwitch" Grid.Column="1"/>
                        </Grid>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE765;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="HotkeyHeading" Text="ATAJOS DE TECLADO" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <StackPanel>
                                <TextBlock x:Name="HotkeyLabel" Text="Atajo para abrir/cerrar CopyPaste" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock x:Name="HotkeyDesc" Text="Selecciona al menos 2 modificadores + una tecla" FontSize="11" Opacity="0.6" Margin="0,4,0,12"/>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <CheckBox x:Name="UseCtrlCheck" Content="Ctrl"/>
                                    <CheckBox x:Name="UseWinCheck" Content="Win"/>
                                    <CheckBox x:Name="UseAltCheck" Content="Alt"/>
                                    <CheckBox x:Name="UseShiftCheck" Content="Shift"/>
                                    <TextBlock Text="+" VerticalAlignment="Center" Margin="4,0"/>
                                    <ComboBox x:Name="HotkeyCombo" Width="80" SelectedIndex="0">
                                        <ComboBoxItem Content="V" Tag="86"/>
                                        <ComboBoxItem Content="C" Tag="67"/>
                                        <ComboBoxItem Content="X" Tag="88"/>
                                        <ComboBoxItem Content="Z" Tag="90"/>
                                        <ComboBoxItem Content="A" Tag="65"/>
                                        <ComboBoxItem Content="S" Tag="83"/>
                                        <ComboBoxItem Content="D" Tag="68"/>
                                        <ComboBoxItem Content="Q" Tag="81"/>
                                        <ComboBoxItem Content="W" Tag="87"/>
                                        <ComboBoxItem Content="E" Tag="69"/>
                                    </ComboBox>
                                </StackPanel>
                                <TextBlock x:Name="HotkeyPreview" Text="Atajo actual: Win + Alt + V" FontSize="12" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" Margin="0,12,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE771;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="AppearanceHeading" Text="APARIENCIA" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <Grid x:Name="PanelWidthGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="PanelWidthLabel" Text="Ancho del panel" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="PanelWidthDesc" Text="Ancho en pixeles (350-600px)" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <NumberBox x:Name="WindowWidthBox" Grid.Column="1" Minimum="400" Maximum="600" SpinButtonPlacementMode="Compact" SmallChange="10"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid x:Name="MarginTopGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="MarginTopLabel" Text="Margen superior" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="MarginTopDesc" Text="Distancia desde arriba (px)" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <NumberBox x:Name="WindowMarginTopBox" Grid.Column="1" Minimum="0" Maximum="100" SpinButtonPlacementMode="Compact" SmallChange="4"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid x:Name="MarginBottomGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="MarginBottomLabel" Text="Margen inferior" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="MarginBottomDesc" Text="Distancia desde abajo (px)" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <NumberBox x:Name="WindowMarginBottomBox" Grid.Column="1" Minimum="0" Maximum="100" SpinButtonPlacementMode="Compact" SmallChange="4"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid x:Name="CardMinLinesGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="CardMinLinesLabel" Text="Lineas (colapsada)" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="CardMinLinesDesc" Text="Lineas de texto en tarjeta colapsada" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <NumberBox x:Name="CardMinLinesBox" Grid.Column="1" Minimum="1" Maximum="10" SpinButtonPlacementMode="Compact" SmallChange="1"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid x:Name="CardMaxLinesGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="CardMaxLinesLabel" Text="Lineas (expandida)" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="CardMaxLinesDesc" Text="Lineas de texto en tarjeta expandida" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <NumberBox x:Name="CardMaxLinesBox" Grid.Column="1" Minimum="3" Maximum="20" SpinButtonPlacementMode="Compact" SmallChange="1"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <!-- BEHAVIOR -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE81C;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="BehaviorHeading" Text="COMPORTAMIENTO" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <Grid x:Name="ResetScrollGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="ResetScrollLabel" Text="Volver arriba al abrir" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ResetScrollDesc" Text="Resetea scroll y selecciona el ultimo item" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <ToggleSwitch x:Name="ResetScrollOnShowSwitch" Grid.Column="1"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid x:Name="ResetFilterModeGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="ResetFilterModeLabel" Text="Volver a modo Contenido al abrir" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ResetFilterModeDesc" Text="Si no, se mantiene el ultimo modo usado" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <ToggleSwitch x:Name="ResetFilterModeOnShowSwitch" Grid.Column="1"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid x:Name="ResetContentFilterGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="ResetContentFilterLabel" Text="Limpiar busqueda al abrir" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ResetContentFilterDesc" Text="Borra el texto de busqueda" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <ToggleSwitch x:Name="ResetContentFilterOnShowSwitch" Grid.Column="1"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid x:Name="ResetCategoryFilterGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="ResetCategoryFilterLabel" Text="Limpiar filtro categoria al abrir" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ResetCategoryFilterDesc" Text="Deselecciona filtros de color" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <ToggleSwitch x:Name="ResetCategoryFilterOnShowSwitch" Grid.Column="1"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid x:Name="ResetTypeFilterGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="ResetTypeFilterLabel" Text="Limpiar filtro tipo al abrir" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ResetTypeFilterDesc" Text="Deselecciona filtros de tipo" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <ToggleSwitch x:Name="ResetTypeFilterOnShowSwitch" Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <!-- CATEGORIES -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE790;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="CategoriesHeading" Text="CATEGORIES" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock x:Name="CategoriesDesc" Text="Personaliza los nombres de las categorías de color." FontSize="11" Opacity="0.65" TextWrapping="Wrap" Margin="0,0,0,4"/>
                            <!-- Red -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="14" Height="14" Fill="#E74C3C" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBox x:Name="ColorLabelRedBox" Grid.Column="1" PlaceholderText="Red" MaxLength="20"/>
                            </Grid>
                            <!-- Green -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="14" Height="14" Fill="#2ECC71" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBox x:Name="ColorLabelGreenBox" Grid.Column="1" PlaceholderText="Green" MaxLength="20"/>
                            </Grid>
                            <!-- Purple -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="14" Height="14" Fill="#9B59B6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBox x:Name="ColorLabelPurpleBox" Grid.Column="1" PlaceholderText="Purple" MaxLength="20"/>
                            </Grid>
                            <!-- Yellow -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="14" Height="14" Fill="#F1C40F" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBox x:Name="ColorLabelYellowBox" Grid.Column="1" PlaceholderText="Yellow" MaxLength="20"/>
                            </Grid>
                            <!-- Blue -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="14" Height="14" Fill="#3498DB" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBox x:Name="ColorLabelBlueBox" Grid.Column="1" PlaceholderText="Blue" MaxLength="20"/>
                            </Grid>
                            <!-- Orange -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Width="14" Height="14" Fill="#E67E22" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBox x:Name="ColorLabelOrangeBox" Grid.Column="1" PlaceholderText="Orange" MaxLength="20"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE9D9;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="PerformanceHeading" Text="RENDIMIENTO" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="PageSizeLabel" Text="Elementos por pagina" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="PageSizeDesc" Text="Cantidad a cargar por lote" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <NumberBox x:Name="PageSizeBox" Grid.Column="1" Minimum="5" Maximum="100" SpinButtonPlacementMode="Compact" SmallChange="5"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="MaxItemsLabel" Text="Limite en memoria" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="MaxItemsDesc" Text="Maximo elementos en RAM" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <NumberBox x:Name="MaxItemsBeforeCleanupBox" Grid.Column="1" Minimum="20" Maximum="500" SpinButtonPlacementMode="Compact" SmallChange="10"/>
                            </Grid>
                            <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Opacity="0.3"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="ScrollThresholdLabel" Text="Umbral de scroll" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ScrollThresholdDesc" Text="Distancia para cargar mas (px)" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <NumberBox x:Name="ScrollLoadThresholdBox" Grid.Column="1" Minimum="20" Maximum="500" SpinButtonPlacementMode="Compact" SmallChange="10"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE74E;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="StorageHeading" Text="ALMACENAMIENTO" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <Grid x:Name="RetentionGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock x:Name="RetentionLabel" Text="Dias de retencion" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock x:Name="RetentionDesc" Text="Dias para mantener historial (0=sin limite)" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                            </StackPanel>
                            <NumberBox x:Name="RetentionDaysBox" Grid.Column="1" Minimum="0" Maximum="365" SpinButtonPlacementMode="Compact" SmallChange="7"/>
                        </Grid>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE77F;" FontSize="16" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="PasteHeading" Text="PEGADO" FontSize="12" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">
                            <TextBlock x:Name="PasteIntro" Text="Velocidad de pegado automatico. Normal/Seguro recomendados para mayoria de equipos." FontSize="11" Opacity="0.65" TextWrapping="Wrap" Margin="0,0,0,8"/>
                            <Grid x:Name="PasteSpeedGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="PasteSpeedLabel" Text="Velocidad de pegado" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="PasteSpeedDesc" Text="Ajusta timings de restauracion y pegado" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <ComboBox x:Name="PastePresetCombo" Grid.Column="1" SelectedIndex="2" SelectionChanged="PastePresetCombo_SelectionChanged">
                                    <ComboBoxItem x:Name="PastePresetFast" Tag="fast"/>
                                    <ComboBoxItem x:Name="PastePresetNormal" Tag="normal"/>
                                    <ComboBoxItem x:Name="PastePresetSafe" Tag="safe"/>
                                    <ComboBoxItem x:Name="PastePresetSlow" Tag="slow"/>
                                </ComboBox>
                            </Grid>
                            <Border Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}" CornerRadius="4" Padding="10" Opacity="0.7">
                                <TextBlock x:Name="PasteWarning" FontSize="10" Opacity="0.85" TextWrapping="Wrap">
                                    <Run Text="⚠️ Rapido:"/>
                                    <Run Text=" Puede causar comportamientos extraños en apps pesadas."/>
                                    <LineBreak/>
                                    <Run Text="⚠️ Lento:"/>
                                    <Run Text=" Puede dar sensacion de fallo en equipos modernos."/>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <FontIcon Glyph="&#xE91B;" FontSize="16" Foreground="#E8912D"/>
                        <TextBlock x:Name="ThumbnailHeading" Text="MINIATURAS (AVANZADO)" FontSize="12" FontWeight="SemiBold" Foreground="#E8912D" CharacterSpacing="50"/>
                    </StackPanel>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderBrush="#E8912D" BorderThickness="1">
                        <StackPanel Spacing="16">
                            <Border Background="#33E8912D" CornerRadius="4" Padding="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE7BA;" FontSize="16" Foreground="#E8912D"/>
                                    <TextBlock x:Name="ThumbnailWarning" Text="Modificar puede afectar consumo de RAM y espacio en disco." FontSize="11" Foreground="#E8912D" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <Grid x:Name="ThumbnailQualityGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock x:Name="ThumbnailQualityLabel" Text="Calidad de miniaturas" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ThumbnailQualityDesc" Text="Solo afecta miniaturas futuras" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                                </StackPanel>
                                <ComboBox x:Name="ThumbnailPresetCombo" Grid.Column="1" SelectedIndex="2" SelectionChanged="ThumbnailPresetCombo_SelectionChanged">
                                    <ComboBoxItem x:Name="ThumbnailPresetExcellent" Tag="excellent"/>
                                    <ComboBoxItem x:Name="ThumbnailPresetHigh" Tag="high"/>
                                    <ComboBoxItem x:Name="ThumbnailPresetMedium" Tag="medium"/>
                                    <ComboBoxItem x:Name="ThumbnailPresetLow" Tag="low"/>
                                    <ComboBoxItem x:Name="ThumbnailPresetMinimal" Tag="minimal"/>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ResetButton" Grid.Column="0" Click="ResetButton_Click"/>
            <Button x:Name="CancelButton" Grid.Column="2" Click="CancelButton_Click" Margin="0,0,8,0"/>
            <Button x:Name="SaveButton" Grid.Column="3" Click="SaveButton_Click" Style="{ThemeResource AccentButtonStyle}"/>
        </Grid>
    </Grid>
</Window>

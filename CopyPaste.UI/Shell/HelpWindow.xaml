<Window
    x:Class="CopyPaste.UI.Shell.HelpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="HelpTitle" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBlock x:Name="HelpSubtitle" FontSize="13" Opacity="0.7"/>
        </StackPanel>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24">

                <!-- General Navigation Section -->
                <StackPanel>
                    <TextBlock x:Name="SectionGeneral" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12" Opacity="0.8"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 0 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="ShortcutOpenClose" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DescOpenClose" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <!-- Row 1 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="ShortcutEscape" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DescEscape" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <!-- Row 2 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" x:Name="ShortcutTab1" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DescTab1" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <!-- Row 3 -->
                            <TextBlock Grid.Row="3" Grid.Column="0" x:Name="ShortcutTab2" FontFamily="Consolas" FontSize="13"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DescTab2" FontSize="13" Opacity="0.8"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Search Section -->
                <StackPanel>
                    <TextBlock x:Name="SectionSearch" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12" Opacity="0.8"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="ShortcutDown" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DescDown" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="ShortcutShiftTab" FontFamily="Consolas" FontSize="13"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DescShiftTab" FontSize="13" Opacity="0.8"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Filters Section -->
                <StackPanel>
                    <TextBlock x:Name="SectionFilters" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12" Opacity="0.8"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="ShortcutFilterContent" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DescFilterContent" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="ShortcutFilterCategory" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DescFilterCategory" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" x:Name="ShortcutFilterType" FontFamily="Consolas" FontSize="13"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DescFilterType" FontSize="13" Opacity="0.8"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Card Navigation Section -->
                <StackPanel>
                    <TextBlock x:Name="SectionNavigation" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12" Opacity="0.8"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="ShortcutArrows" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DescArrows" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="ShortcutRight" FontFamily="Consolas" FontSize="13"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DescRight" FontSize="13" Opacity="0.8"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Card Actions Section -->
                <StackPanel>
                    <TextBlock x:Name="SectionActions" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12" Opacity="0.8"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="ShortcutEnter" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DescEnter" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="ShortcutDelete" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DescDelete" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" x:Name="ShortcutPin" FontFamily="Consolas" FontSize="13" Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DescPin" FontSize="13" Opacity="0.8" Margin="0,0,0,12"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" x:Name="ShortcutEdit" FontFamily="Consolas" FontSize="13"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DescEdit" FontSize="13" Opacity="0.8"/>
                        </Grid>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CloseButton" Click="CloseButton_Click" MinWidth="100" Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>

    </Grid>
</Window>
